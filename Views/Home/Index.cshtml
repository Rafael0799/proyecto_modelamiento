<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Calculadora de Contaminación de Ríos</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <h1>Calculadora de Contaminación de Ríos</h1>
        <form asp-action="Calcular" method="post">
            <div class="form-group">
                <label for="concentration">Concentración (mg/L):</label>
                <input type="number" step="0.01" name="concentration" id="concentration" required />
            </div>
            <div class="form-group">
                <label for="velocity">Velocidad (m/s):</label>
                <input type="number" step="0.01" name="velocity" id="velocity" required />
            </div>
            <div class="form-group">
                <label for="method">Método de Integración:</label>
                <select name="method" id="method" required>
                    <option value="trapecio">Trapecio</option>
                    <option value="simpson">Simpson</option>
                </select>
            </div>
            <button type="submit">Calcular</button>
        </form>

        @if (ViewBag.Result != null)
        {
            <h2>Resultado:</h2>
            <p>@ViewBag.Result</p>
        }
    </div>
    <script src="~/js/site.js"></script>
</body>
</html>